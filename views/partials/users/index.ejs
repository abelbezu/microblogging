<% layout('../../layout') -%>

<div class="container">
	
	<div class="row">
		<div class="col-md-3">
			
		</div>
		<div class="col-md-6">
		<% users.forEach(function(user){%>
			<form class = "form-group" action = "/users/follow" method = "post">
			 <div class = "user_container">
			    <div class = "row">
			    	<div class = "col-md-6">
			    		<h5><%= user.username%></h5>
			    	</div>
			    	<div class = "col-md-6">
			    		
						<input type = "hidden" name = "followee_name" value = "<%= user.username%>">
						<input type = "submit" class = "btn btn-default" value = "follow">
			    	</div>
					
				</div>
			 </div>

			</form>
		

		<%})%>
			

		</div>
		<div class="col-md-3">
			
		</div>
	</div>

</div>
